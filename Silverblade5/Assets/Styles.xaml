                </Grid>
                <ScrollViewer Grid.Row="2"
                              Margin="0,-8,0,0"
                              Background="{x:Null}"
                              BorderThickness="0"
                              IsTabStop="False"
                              Padding="{TemplateBinding Padding}"
                              Style="{StaticResource CustomScrollViewerStyle}"
                              VerticalScrollBarVisibility="Auto">
                  <ContentPresenter x:Name="ContentPresenter" Margin="0,10,0,10" />
                </ScrollViewer>
                <StackPanel Grid.Row="0" Margin="0,0,0,0">
                  <dataInput:ValidationSummary x:Name="ValidationSummary"
                                               MaxHeight="25"
                                               Margin="0,0,0,0"
                                               Background="#FFDC020D"
                                               BorderBrush="#FFDC020D"
                                               BorderThickness="1,1,1,1"
                                               IsHitTestVisible="False"
                                               Padding="0"
                                               Visibility="Visible">
                    <dataInput:ValidationSummary.Template>
                      <ControlTemplate TargetType="dataInput:ValidationSummary">
                        <Grid x:Name="ValidationSummary">
                          <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                              <VisualState x:Name="Normal" />
                              <VisualState x:Name="Disabled">
                                <Storyboard>
                                  <ObjectAnimationUsingKeyFrames Duration="0"
                                                                 Storyboard.TargetName="DisabledVisual"
                                                                 Storyboard.TargetProperty="Visibility">
                                    <DiscreteObjectKeyFrame KeyTime="0" Value="Visible" />
                                  </ObjectAnimationUsingKeyFrames>
                                </Storyboard>
                              </VisualState>
                            </VisualStateGroup>
                            <VisualStateGroup x:Name="ValidationStates">
                              <VisualState x:Name="Empty">
                                <Storyboard>
                                  <DoubleAnimation Duration="00:00:00.3000000"
                                                   Storyboard.TargetName="Content"
                                                   Storyboard.TargetProperty="(FrameworkElement.Height)"
                                                   To="0" />
                                </Storyboard>
                              </VisualState>
                              <VisualState x:Name="HasErrors">
                                <Storyboard>
                                  <DoubleAnimation Duration="00:00:00.3000000"
                                                   Storyboard.TargetName="Content"
                                                   Storyboard.TargetProperty="(FrameworkElement.Height)"
                                                   To="50" />
                                </Storyboard>
                              </VisualState>
                            </VisualStateGroup>
                          </VisualStateManager.VisualStateGroups>
                          <Border x:Name="Content"
                                  Height="0"
                                  Background="{TemplateBinding Background}"
                                  BorderBrush="{TemplateBinding BorderBrush}"
                                  BorderThickness="{TemplateBinding BorderThickness}"
                                  CornerRadius="0,0,2,2">
                            <Grid>
                              <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                              </Grid.RowDefinitions>
                              <ListBox x:Name="SummaryListBox"
                                       Grid.Row="1"
                                       Height="Auto"
                                       Background="{x:Null}"
                                       BorderThickness="0"
                                       Foreground="{TemplateBinding Foreground}"
                                       ItemContainerStyle="{TemplateBinding ErrorStyle}"
                                       Padding="{TemplateBinding Padding}"
                                       Style="{TemplateBinding SummaryListBoxStyle}">
                                <ListBox.ItemTemplate>
                                  <DataTemplate>
                                    <TextBlock Margin="4,0,0,0"
                                               Foreground="White"
                                               Text="{Binding Message}" />
                                  </DataTemplate>
                                </ListBox.ItemTemplate>
                              </ListBox>
                              <Border x:Name="DisabledVisual"
                                      Grid.RowSpan="2"
                                      Background="#80FFFFFF"
                                      IsHitTestVisible="True"
                                      Visibility="Collapsed" />
                              <ContentControl x:Name="HeaderContentControl" Visibility="Collapsed" />
                            </Grid>
                          </Border>
                        </Grid>
                      </ControlTemplate>
                    </dataInput:ValidationSummary.Template>
                  </dataInput:ValidationSummary>
                </StackPanel>
                <StackPanel HorizontalAlignment="Right"
                            Orientation="Horizontal"
                            Visibility="Collapsed">
                  <Button x:Name="CommitButton"
                          MinWidth="71"
                          MinHeight="17"
                          Margin="0,5,8,5"
                          Content="OK"
                          HorizontalContentAlignment="Center"
                          VerticalContentAlignment="Center"
                          Visibility="Collapsed" />
                  <Button x:Name="CancelButton"
                          MinWidth="71"
                          MinHeight="17"
                          Margin="0,5,8,5"
                          Content="Cancel"
                          HorizontalContentAlignment="Center"
                          VerticalContentAlignment="Center"
                          Visibility="Collapsed" />
                </StackPanel>
              </Grid>
            </Border>
            <Border x:Name="DisabledVisual"
                    Background="#8CFFFFFF"
                    CornerRadius="2"
                    IsHitTestVisible="False"
                    Opacity="0" />
          </Grid>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>

