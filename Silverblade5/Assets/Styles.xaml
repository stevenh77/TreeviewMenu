                    </Button>
                    <Border x:Name="ButtonSeparator"
                            Width="3"
                            Margin="2,4,2,4"
                            Background="{TemplateBinding BorderBrush}"
                            BorderBrush="#59FFFFFF"
                            BorderThickness="1,0,1,0"
                            Opacity="0.2" />
                    <Button x:Name="EditButton"
                            Style="{StaticResource ButtonGeneric}"
                            ToolTipService.ToolTip="Edit">
                      <Button.OpacityMask>
                        <LinearGradientBrush StartPoint="0.42,0.01" EndPoint="0.57,0.76">
                          <GradientStop Offset="0" Color="#7F000000" />
                          <GradientStop Offset="0.442" Color="#BF000000" />
