                              <LinearGradientBrush StartPoint="0.21,0.18" EndPoint="0.76,0.77">
                                <GradientStop Offset="0" Color="#7F000000" />
                                <GradientStop Offset="0.106" Color="#59000000" />
                                <GradientStop Offset="0.387" Color="#3F000000" />
                                <GradientStop Offset="0.703" Color="#99000000" />
                                <GradientStop Offset="1" Color="#CC000000" />
                              </LinearGradientBrush>
                            </Path.OpacityMask>
                          </Path>
                          <Path Canvas.Left="7.47"
                                Canvas.Top="1.89"
